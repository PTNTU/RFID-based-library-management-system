<!DOCTYPE html>
<html lang="en">

<head>
  <% include partial/head %>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:** -->
    <!--[if lt IE 9]>
    <script src="https:**oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https:**oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
<![endif]-->
<link rel="stylesheet" href="/stylesheets/jquery-ui.min.css"/>
</head>

<body class="fix-header fix-sidebar ">
  <!-- Preloader - style you can find in spinners.css -->
  <div class="preloader">
    <svg class="circular" viewBox="25 25 50 50">
			<circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" /> </svg>
  </div>
  <!-- Main wrapper  -->
  <div id="main-wrapper">
    <!-- header header  -->
    <% include partial/header %>
      <!-- End header header -->
      <!-- Left Sidebar  -->
      <% include partial/leftSidebar %>
        <!-- End Left Sidebar  -->
        <!-- Page wrapper  -->
        <div class="page-wrapper">
          <!-- Bread crumb -->
          <div class="row page-titles">
            <div class="col-md-5 align-self-center">
              <h3 class="text-primary">Dashboard</h3> </div>
            <div class="col-md-7 align-self-center">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
              </ol>
            </div>
          </div>
          <!-- End Bread crumb -->
          <!-- Container fluid  -->
          <div class="container-fluid">
            <!-- Start Page Content -->
            <div class="row">
              <div class="col-md-3">
                <div class="card p-30">
                  <div class="media">
                    <div class="media-left meida media-middle">
                      <span><i class="fa fa-book f-s-40 color-primary"></i></span>
                    </div>
                    <div class="media-body media-text-right">
                      <h2><%= bookCounnt %></h2>
                      <a href="/books/list"><p class="m-b-0">Total Book</p></a>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-3">
                <div class="card p-30">
                  <div class="media">
                    <div class="media-left meida media-middle">
                      <span><i class="fa fa-shopping-cart f-s-40 color-success"></i></span>
                    </div>
                    <div class="media-body media-text-right">
                      <h2><%= brCount %></h2>
                      <a href="#"><p class="m-b-0">Borrowing Book</p></a>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-2">
                <div class="card p-30">
                  <div class="media">
                    <div class="media-left meida media-middle">
                      <span><i class="fa fa-archive f-s-40 color-warning"></i></span>
                    </div>
                    <div class="media-body media-text-right">
                      <h2><%= catCount %></h2>
                      <a href="/books/catList"><p class="m-b-0">Categories</p></a>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-2">
                <div class="card p-30">
                  <div class="media">
                    <div class="media-left meida media-middle">
                      <span><i class="fa fa-users f-s-40 color-danger"></i></span>
                    </div>
                    <div class="media-body media-text-right">
                      <h2><%= scount %></h2>
                      <a href="/students/list"><p class="m-b-0">Total Student</p></a>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-2">
                <div class="card p-30">
                  <div class="media">
                    <div class="media-left meida media-middle">
                      <span><i class="fa fa-user f-s-40 color-primary"></i></span>
                    </div>
                    <div class="media-body media-text-right">
                      <h2><%= memCount %></h2>
                      <a href="/members/list"><p class="m-b-0">Total Member</p></a>
                    </div>
                  </div>
                </div>
              </div>
            </div>


            <div class="row">

              <div class="col-lg-6">
                <div class="card">
                  <div class="card-title">
                    <a href="/members/warn"><h4>Warning Member</h4></a>
                  </div>
                  <div class="card-body">
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Major</th>
                            <th>Year</th>
                            <th>Roll No</th>
                            <th>Expired</th>
                          </tr>
                        </thead>
                        <tbody id="warnTab">

                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="card">
                  <div class="card-title">
                    <a href="/books/history"><h4>Book Borrowing History</h4></a>
                  </div>
                  <div class="card-body">
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Major</th>
                            <th>Year</th>
                            <th>Role</th>
                            <th>Type</th>
                          </tr>
                        </thead>
                        <tbody id="histTab">

                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>


            <div class="row">
              <div class="col-lg-6">
                <!-- <div class="row"> -->
                  <!-- <div class="col-lg-6"> -->
                    <div class="card">
                      <a href="#"><h4 class="card-title">Book Categorie</h4></a>
                      <div class="card-body browser">
                        <%for(var l=0; l< avg.length; l++){ %>
                        <hr>
                          <p class="f-w-600"><%= avg[l]._id%> <span class="pull-right"><%=Math.round((avg[l].count/bookCounnt)*100)%>%</span></p>
                          <div class="progress ">
                            <div role="progressbar" style="width: <%=Math.round((avg[l].count/bookCounnt)*100)%>%; height:8px;" class="progress-bar bg-warning wow animated progress-animated"> <span class="sr-only">60% Complete</span> </div>
                          </div>
                        <%}%>

                      </div>
                    </div>
                  </div>
                  <!-- /# column -->
                  <!-- <div class="col-lg-6">
                    <div class="card">
                      <div class="card-body">
                        <div class="year-calendar"></div>
                      </div>
                    </div>
                  </div> -->
                <!-- </div> -->
              <!-- </div> -->

              <div class="col-lg-6">
                <div class="card">
                  <a href="#"><h4 class="card-title">Top Ten book rating</h4></a>
                  <div class="card-body browser">
                    <%for(var e=0; e< rat.length; e++){ %>
                      <hr>
                      <p class="f-w-600"><%= rat[e].book_name%> <span class="pull-right"><%=Math.round((rat[e].count/bcount)*100)%>%</span></p>
                      <div class="progress ">
                        <div role="progressbar" style="width: <%=Math.round((rat[e].count/bcount)*100)%>%; height:8px;" class="progress-bar bg-success wow animated progress-animated"> <span class="sr-only">60% Complete</span> </div>
                      </div>
                    <%}%>

                  </div>
                </div>
              </div>

            </div>


            <!-- End PAge Content -->
          </div>
          <!-- End Container fluid  -->
          <!-- footer -->
          <% include partial/footer %>
          <!-- End footer -->
        </div>
        <!-- End Page wrapper  -->
  </div>
  <!-- End Wrapper -->
  <!-- All Jquery -->
  <% include partial/javascript %>

</body>
<script src="/javascripts/lib/jquery-ui/jquery-ui.min.js"></script>
<script src="/javascripts/lib/jquery-ui/jquery.ui.touch-punch.min.js"></script>
<script src="/javascripts/lib/bootstrap/js/bootstrap.min.js"></script>
<script type="text/javascript">
$.post(
  'books/warningli',
).done(function (res) {
  var warnTab = document.getElementById('warnTab');
  if(res.data.length == 0) {
    var row = warnTab.insertRow(0);
    row.insertCell(0).appendChild(document.createTextNode("Data Not Found"))
  }
  for(var k=0; k<res.data.length; k++){
    var row = warnTab.insertRow(k);
    var cell0 = row.insertCell(0);
    cell0.appendChild(document.createTextNode(k+1));//TODO need to add real path
    var cell1 = row.insertCell(1);
    cell1.appendChild(document.createTextNode(res.data[k].name));
    var cell2 = row.insertCell(2);
    cell2.appendChild(document.createTextNode(res.data[k].major));
    var cell3 = row.insertCell(3);
    cell3.appendChild(document.createTextNode(res.data[k].year));
    var cell4 = row.insertCell(4);
    cell4.appendChild(document.createTextNode(res.data[k].roleNo));
    var cell5 = row.insertCell(5);
    cell5.appendChild(document.createTextNode(res.time[k]));
  }

});

$.post(
  'books/histBor',
).done(function (res) {
    var histTab = document.getElementById('histTab');
    if(res.data.length == 0) {
      var row = histTab.insertRow(0);
      row.insertCell(0).appendChild(document.createTextNode("Data Not Found"))
    }
    for(var k=0; k<res.data.length; k++){
      var row = histTab.insertRow(k);
      var cell0 = row.insertCell(0);
      cell0.appendChild(document.createTextNode(k+1));//TODO need to add real path
      var cell1 = row.insertCell(1);
      cell1.appendChild(document.createTextNode(res.data[k].member_id.name));
      var cell2 = row.insertCell(2);
      cell2.appendChild(document.createTextNode(res.data[k].member_id.major));
      var cell3 = row.insertCell(3);
      cell3.appendChild(document.createTextNode(res.data[k].member_id.year));
      var cell4 = row.insertCell(4);
      cell4.appendChild(document.createTextNode(res.data[k].member_id.roleNo));
      var cell5 = row.insertCell(5);
      cell5.appendChild(document.createTextNode((res.data[k].type=='01')? 'Return':'Borrow'));

    }


});

</script>

</html>
