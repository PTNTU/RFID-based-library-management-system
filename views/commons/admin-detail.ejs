      $(function(){
        $("html").niceScroll({
            cursorcolor:"#16385d",
            cursorwidth:"5px",
            background:"#fff",
            cursorborder:"1px solid #5c4ac7",
            cursorborderradius:0
            });  // a world f

      });
      $('#oldPass').blur(function () {
        var data = { oldPass: $('#oldPass').val()};
        console.log('work',data);
        if(data.oldPass == '') return;
        $.ajax({url: "/profile/checkpwd", data:data, type: 'POST', success: function (result) {
          if(result.status == false){
            alert(result.msg);
            $('#oldPass').val('');
            $('#oldPass').focus();
          }
        }});
      });
      $('#ref').blur(function () {

        if($('#ref').val() != "SL1116"){
          $('#ref').val('');
          $('#ref').attr('placeholder',"Wrong Ref Code");
          $('#ref').focus();
        }
      });
      function check() {
        console.log('open model');
        $('#changePassModal').modal('hide');
        var newpass = $('#newPass').val();
        console.log(newpass);
        $('#password').val(newpass);
        $('#update_btn').attr('hidden',false);
        $('#modal_btn').attr('hidden', true);
      }
