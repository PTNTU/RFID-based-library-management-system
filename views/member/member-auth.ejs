<link href="/stylesheets/lib/sweetalert/sweetalert.css" rel="stylesheet">
<link href="/stylesheets/lib/bootstrap/bootstrap.min.css" rel="stylesheet">
<!-- Custom CSS -->
<link href="/stylesheets/helper.css" rel="stylesheet">
<link href="/stylesheets/style.css" rel="stylesheet">
</head>

<body class="fix-header fix-sidebar">
  <!-- Preloader - style you can find in spinners.css -->
  <div class="preloader">
    <svg class="circular" viewBox="25 25 50 50">
			<circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" /> </svg>
  </div>
  <!-- Main wrapper  -->
  <div id="main-wrapper">
    <!-- header header  -->
    <% include ../partial/header %>
      <!-- End header header -->
      <!-- Left Sidebar  -->
      <% include ../partial/leftSidebar %>
        <!-- End Left Sidebar  -->
        <!-- Page wrapper  -->
        <div class="page-wrapper">
          <!-- Bread crumb -->
          <div class="row page-titles">
            <div class="col-md-5 align-self-center">
              <h3 class="text-primary">Member Registration</h3> </div>
            <div class="col-md-7 align-self-center">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Members</a></li>
                <li class="breadcrumb-item active">Add Member</li>
              </ol>
            </div>
          </div>
          <!-- End Bread crumb -->
          <!-- Container fluid  -->
          <div class="container-fluid">
              <!-- Start Page Content -->
              <div class="row justify-content-center">

                  <div class="col-lg-6">
                        <div class="card card-outline-info">
                            <div class="card-header">
                                <h4 class="m-b-0 text-white">Member Authorication</h4>
                            </div>
                            <div class="card-body">
                                <form class="form-horizontal">
                                    <div class="form-body">
                                        <h3 class="box-title m-t-15 ">Member Smart Card Number Here</h3>
                                        <hr class="m-t-0 m-b-40">
                                        <div class="form-group row">

                                            <label class="col-lg-12 col-form-label text-center" for="rfid">RFID No </label>
                                            <div class="col-lg-10">
                                                <input type="text" class="form-control" id="rfid" name="rfid" placeholder="Place Member's Cart at RFID reader">
                                            </div>
                                            <div class="col-lg-2" >
                                              <span id="msg"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-12 col-form-label text-center" for="info">Message</span></label>
                                            <div class="col-lg-12" >
                                                <p id="showmsg">You are good man</p>
                                            </div>
                                        </div>
                                    <hr>
                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="row">
                                                    <div class="col-md-offset-3 col-md-9 text-right">
                                                      <button class="btn btn-light waves-effect waves-light" id="goto" hidden> <span>Go to member registration</span> <i class="fa fa-send m-l-10"></i> </button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6"> </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

              </div>
              <!-- End PAge Content -->
          </div>


            <!-- End PAge Content -->
          </div>
          <!-- End Container fluid  -->
          <!-- footer -->
          <% include ../partial/footer %>
          <!-- End footer -->
        </div>
        <!-- End Page wrapper  -->
  </div>
  <!-- End Wrapper -->
  <!-- All Jquery -->
  <% include ../partial/javascript %>
  <script src="/javascripts/lib/form-validation/jquery.validate.min.js"></script>
  <script src="/javascripts/lib/form-validation/jquery.validate-init.js"></script>
  <script src="/javascripts/lib/sweetalert/sweetalert.min.js"></script>
  <script src="/javascripts/lib/toastr/toastr.min.js"></script>
  <!-- scripit init-->
  <script src="/javascripts/lib/toastr/toastr.init.js"></script>
  <!--Custom JavaScript -->

</body>
<script type="text/javascript">
var timeout = null;
$('#rfid').keyup(function () {
  console.log($('#rfid').val());
$('#msg').html('<svg class="circular" viewBox="25 25 50 50"><circle class="path" cx="50" cy="50" r="7" fill="none" stroke-width="5" stroke-miterlimit="10" /> </svg>');
  clearTimeout(timeout);
  timeout = setTimeout(function () {

    $.post(
      '/members/authcheck',
      {rfid : $('#rfid').val()}
    ).done(function (res) {
      if(res.status){
        $('#msg').html('<i class = "fa fa-check" style ="color:green;"></i>');
        $('#showmsg').html(res.msg);
      }else{
        $('#msg').html('<i class = "fa fa-remove " style ="color:red;"></i>');
        $('#showmsg').html(res.msg);
        $('#goto').removeAttr('hidden');
      }
    }).fail(function (err) {
      console.log(err.status);
    });
  }, 1500);
  $('#goto').click(location.href = '/members/add');
});

</script>

</html>
